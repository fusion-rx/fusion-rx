{
    "$schema": "node_modules/@fusion-rx/cli/src/fusion/workspace/schema.json",
    "name": "Fusion-rx",
    "version": "0.1.0",
    "newProjectsRoot": "packages",
    "projects": {
        "example": {
            "projectType": "application",
            "root": "packages/example",
            "sourceRoot": "packages/example/app",
            "architect": {
                "build": {
                    "builder": "tsc",
                    "options": {
                        "outputPath": "dist",
                        "main": "main.ts",
                        "tsConfig": "tsconfig.app.json"
                    }
                }
            }
        },
        "shared": {
            "projectType": "library",
            "root": "packages/shared",
            "sourceRoot": "packages/shared/src",
            "architect": {
                "build": {
                    "builder": "tsc",
                    "options": {
                        "outputPath": "dist",
                        "main": "public-api.ts",
                        "tsConfig": "tsconfig.build.json"
                    }
                }
            }
        },
        "core": {
            "projectType": "library",
            "root": "packages/core",
            "sourceRoot": "packages/core/src",
            "architect": {
                "build": {
                    "builder": "tsc",
                    "options": {
                        "outputPath": "dist",
                        "main": "public-api.ts",
                        "tsConfig": "tsconfig.build.json",
                        "targets": {
                            "main": {
                                "context": "node",
                                "outputFormat": "commonjs"
                            },
                            "module": {
                                "context": "browser",
                                "outputFormat": "esmodule"
                            }
                        }
                    }
                }
            }
        },
        "common": {
            "projectType": "library",
            "root": "packages/common",
            "sourceRoot": "packages/common/src",
            "architect": {
                "build": {
                    "builder": "tsc",
                    "options": {
                        "outputPath": "dist",
                        "main": "public-api.ts",
                        "tsConfig": "tsconfig.build.json"
                    }
                }
            }
        },
        "test": {
            "projectType": "library",
            "root": "packages/test",
            "sourceRoot": "packages/test/src",
            "architect": {
                "build": {
                    "builder": "tsc",
                    "options": {
                        "outputPath": "dist",
                        "main": "public-api.ts",
                        "tsConfig": "tsconfig.build.json"
                    }
                }
            }
        }
    }
}
