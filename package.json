{
    "name": "fusion-rx",
    "version": "0.0.1",
    "description": "FusionRx - The modern middleware developer's framework",
    "author": "Alexander Porrello",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "npm run build:core && npm run build:node && npm run build:nest && npm run build:config",
        "build:cli": "cd packages/cli && npm run build",
        "build:shared": "cd packages/shared && npm run build",
        "build:common": "cd packages/common && npm run build",
        "build:core": "cd packages/core && npm run build",
        "build:node": "cd packages/node && npm run build",
        "build:compiler": "cd packages/compiler && npm run build",
        "build:example": "cd packages/example && npm run build",
        "serve:example": "node dist/example/app/main.js"
    },
    "outDir": "dist",
    "workspaces": [
        "dist/shared",
        "dist/common",
        "dist/node",
        "dist/cli",
        "dist/core",
        "dist/test",
        "dist/compiler"
    ],
    "workspacesConf": {
        "srcRoot": "packages",
        "outDir": "dist",
        "projects": [
            {
                "source": "cli",
                "buildCommand": "npm run build:cli",
                "buildFrom": "root"
            },
            {
                "source": "common",
                "buildCommand": "npm run build:common",
                "buildFrom": "root"
            },
            {
                "source": "node",
                "buildCommand": "npm run build:node",
                "buildFrom": "root"
            },
            {
                "source": "nest",
                "buildCommand": "npm run build:nest",
                "buildFrom": "root"
            },
            {
                "source": "config",
                "buildCommand": "npm run build:config",
                "buildFrom": "root"
            },
            {
                "source": "test",
                "buildComman": "npm run build",
                "buildFrom": "project"
            }
        ]
    },
    "dependencies": {
        "express": "^4.18.3",
        "node-fetch": "^3.3.2",
        "ora": "5.4.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.0"
    },
    "devDependencies": {
        "@parcel/packager-ts": "^2.11.0",
        "@parcel/transformer-typescript-tsc": "^2.11.0",
        "@parcel/transformer-typescript-types": "^2.11.0",
        "@types/chokidar": "^2.1.3",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.5",
        "@types/node": "^18.19.15",
        "@types/node-fetch": "^2.6.11",
        "@types/vscode": "^1.86.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "assert": "^2.1.0",
        "crypto-browserify": "^3.12.0",
        "events": "^3.3.0",
        "https-browserify": "^1.0.0",
        "jest": "^29.7.0",
        "os-browserify": "^0.3.0",
        "parcel": "^2.11.0",
        "path-browserify": "^1.0.1",
        "prettier": "^3.0.0",
        "process": "^0.11.10",
        "source-map-support": "^0.5.21",
        "stream-browserify": "^3.0.0",
        "stream-http": "^3.2.0",
        "ts-jest": "^29.1.1",
        "tsc-alias": "^1.8.5",
        "tsconfig-paths": "^4.2.0",
        "tty-browserify": "^0.0.1",
        "typescript": "^5.1.3",
        "url": "^0.11.3",
        "util": "^0.12.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "packages",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
